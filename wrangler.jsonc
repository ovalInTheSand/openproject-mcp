{
  "name": "openproject-mcp",
  "main": "src/index.ts",
  "compatibility_date": "2025-08-15",
  "compatibility_flags": ["nodejs_als"],
  "version_metadata": { "binding": "CF_VERSION_METADATA" },
  
  // Environment variables (non-sensitive)
  "vars": {
    "ALLOWED_ORIGINS": "https://claude.ai,https://app.claude.ai",
    "SENTRY_TRACES_SAMPLE_RATE": "0.1",
    "SENTRY_SEND_PII": "false",
    "SENTRY_ENABLE_LOGS": "false",
    "SSE_ENABLED": "false"
  },
  
  // Sensitive variables - set using: npx wrangler secret put VARIABLE_NAME
  // Required secrets to configure:
  // - OP_BASE_URL: Your OpenProject instance URL
  // - OP_TOKEN: Your OpenProject API token  
  // - SENTRY_DSN: Sentry error tracking DSN (optional)
  
  // Optional SSE Configuration:
  // Set SSE_ENABLED=true in vars above to enable Server-Sent Events endpoint at /sse
  // SSE is disabled by default per project philosophy (streamable HTTP transport is primary)
  
  // Resource limits for Cloudflare Workers
  "limits": {
    "cpu_ms": 10000
  },
  
  // KV namespaces (add if needed for caching)
  // "kv_namespaces": [
  //   { "binding": "CACHE", "id": "your-kv-namespace-id" }
  // ],
  
  // Custom domains (configure after deployment)
  // "routes": [
  //   { "pattern": "mcp.yourdomain.com/*", "zone_name": "yourdomain.com" }
  // ]
}
